<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_medium">

    <TextView
        android:id="@+id/message_body_text_view"
        android:background="@drawable/rounded_rectangle_blue"
        android:layout_width="wrap_content"
        android:maxWidth="@dimen/message_item_body_text_max_width"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_medium"
        android:textColor="@android:color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hello agent!" />

    <TextView
        android:id="@+id/message_time_stamp_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/default_small"
        android:layout_marginEnd="@dimen/default_small"
        android:textSize="@dimen/message_time_stamp_text_size"
        app:layout_constraintTop_toBottomOf="@+id/message_body_text_view"
        app:layout_constraintRight_toLeftOf="@+id/message_body_text_view"
        tools:text="16:33" />

</android.support.constraint.ConstraintLayout>