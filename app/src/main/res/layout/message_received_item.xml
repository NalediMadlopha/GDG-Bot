<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_medium">

    <TextView
        android:id="@+id/messageBodyTextView"
        android:background="@drawable/rounded_rectangle_grey"
        android:layout_width="wrap_content"
        android:maxWidth="@dimen/message_item_body_text_max_width"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_medium"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hello human, how are you?" />

    <TextView
        android:id="@+id/messageTimeStampTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/default_small"
        android:layout_marginEnd="@dimen/default_small"
        android:textSize="@dimen/message_time_stamp_text_size"
        app:layout_constraintTop_toBottomOf="@+id/messageBodyTextView"
        app:layout_constraintLeft_toRightOf="@+id/messageBodyTextView"
        tools:text="16:34" />

</android.support.constraint.ConstraintLayout>